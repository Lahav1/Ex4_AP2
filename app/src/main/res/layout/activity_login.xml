<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDC7CF"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textIpTitle"
        android:layout_width="72dp"
        android:layout_height="41dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="40dp"
        android:text="IP: "
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPortTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="100dp"
        android:text="Port: "
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/ipTextBox"
        android:layout_width="234dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="46dp"
        android:background="#008477"
        android:backgroundTint="#008477"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textCursorDrawable="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/portTextBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/textbox" />

    <Button
        android:id="@+id/connectButton"
        style="@android:style/Widget.Button"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="52dp"
        android:background="#E25A5959"
        android:text="Connect"
        android:textColor="#BDC7CF"
        android:textColorHighlight="#DA615F5F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>